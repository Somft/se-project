@functions {
    private string GetInputClass(string inputName)
    {
        string result = "form-control";

        if (this.ViewData.ModelState[inputName]?.ValidationState == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid)
        {
            result += " is-invalid";
        }

        return result;
    }
}