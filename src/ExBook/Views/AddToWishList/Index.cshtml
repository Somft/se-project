@model ExBook.Models.AddToWhishList.AddToWishListViewModel
@{
    ViewData["Title"] = "Add Book To Wish List";
}

<div class="container flex align-items-center " style="height:100%;">
    <div class="row justify-content-center align-items-center" style="height:90vh;">
       <form asp-controller="AddToWishList" asp-action="Index" method="post">
           <div class="card">
               
               <div class="card-header align-items-center">
                   Add another volume to your wishlist!
                   
               </div>
              
               <div class="card-body" style="padding: 2.25rem" style ="padding-top: 2rem ">
                    @if (Model.Message != null)
                    {
                       <p class="text-danger text-center">@Model.Message</p>
                    }
                   <div class="form-row justify-content-center">
                       <div class="form-group col-md-12">
                           <label for="Book title:">Name</label>
                           <input asp-for="Name" class=@GetInputClass("Name") placeholder="Harry Potter" type="text">
                           <span asp-validation-for="Name" class="invalid-feedback"></span></div>
                   </div>

                   <div class="form-row justify-content-center">
                       <div class="form-group col-md-12">
                           <label for="Author:">Author</label>
                           <input asp-for="Author" class=@GetInputClass("Author") placeholder="J.K Rowling" type="text">
                           <span asp-validation-for="Author" class="invalid-feedback"></span></div>
                   </div>


                   <div class="form-row justify-content-center">
                       <div class="form-group col-md-12">
                           <label for="Created">Created</label>
                           <input asp-for="Created" class=@GetInputClass("The year of publishment") placeholder="2001" type="text">
                           <span asp-validation-for="Created" class="invalid-feedback"></span> </div>

                   </div>


               </div>
               <div class="card-footer">
                   <div class="float-right buttons " style="visibility: visible;" id="footerButtons">
                       <button type="submit" class="vertical-center">Wish this book</button>
                   </div>
               </div>
           </div>
        </form>
    </div>
</div>


<style>
        .col-md-12 {
            margin-left: 40px;
            margin-right: 40px;
        }
    </style>


