@model List<ExBook.Data.Rating>
    <div class="card border-secondary mb-3">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Comment</th>
                        <th scope="col">Value</th>
                        <th scope="col">Initiatior</th>
                        <th scope="col">Recipient</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rating in Model)
                    {
                        <tr>
                            <td>@rating.Comment</td>
                            <td>@rating.Value</td>
                            <td>@rating.Transaction.Initiator.Login</td>
                            <td>@rating.Transaction.Recipient.Login</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
