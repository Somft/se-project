@model ExBook.Models.Home.HomeViewModel
@{ ViewData["Title"] = "Home"; }

<body style="background-color:beige">
            <div class="container flex justify-content-center">
                <div class="card">
                    <div class="card-body">
                        <div class="container py-5">
                            <!-- For Demo Purpose -->
                            <header class="text-center">
                                <h1 class="display-4 font-weight-bold">ExBook</h1>
                                <p class="font-italic text-muted mb-0">Your favourite online library</p>
                            </header>
                        </div>
                        <div class="row flex-fill">
                            <div class="col-12">
                                <div class="container-fluid" style="padding:10%;">
                                    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" style="max-height:450px !important;">
                                        <ol class="carousel-indicators">
                                            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                                            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                                            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                                        </ol>
                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img src="https://64.media.tumblr.com/11210d92e81d404ace2d47a54595f891/tumblr_n421ia523j1qfplego1_400.jpg" style="width:740px;height:331px" class="d-block w-100" alt="...">
                                                <div class="carousel-caption d-none d-md-block" style="background-color: #ded7c3; padding: 15px;">
                                                    <h5>ExBook</h5>
                                                    <p>This website is an online library where you can borrow books, find books that interest you and much more.</p>
                                                </div>
                                            </div>
                                            <div class="carousel-item">
                                                <img src="https://ideas.ted.com/wp-content/uploads/sites/3/2016/12/featured_art.jpg?w=750" class="d-block w-100" style="width:740px;height:331px" alt="...">
                                                <div class="carousel-caption d-none d-md-block" style="background-color: #ded7c3; padding: 15px;">
                                                    <h5>Wide selection</h5>
                                                    <p>Thousands of books from around the world are waiting for you!</p>
                                                </div>
                                            </div>
                                            <div class="carousel-item">
                                                <img src="https://www.master-and-more.eu/fileadmin/_processed_/csm_ecology-and-biodiversity_d0c0697c4d.jpg" style="width:740px;height:331px" class="d-block w-100" alt="...">
                                                <div class="carousel-caption d-none d-md-block" style="background-color: #ded7c3; padding: 15px;">
                                                    <h5>Ecology</h5>
                                                    <p>Trade your old books in for used ones and save the planet while you're at it!</p>
                                                </div>
                                            </div>
                                        </div>
                                        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row flex-fill">
                            <div class="col-12">
                                <div class="container-fluid">
                                    <div class="container py-5">
                                        <div class="text-center">
                                            <p class="font-italic text-muted mb-0">Books on time we recommend</p>
                                        </div>

                                        <div class="container">
                                            <div class="row">
                                                @foreach (var book in Model.LatestBooks)
                                                {
                                                    <div class="col-md-4 col-sm-6">
                                                        <div class="book">
                                                            @if (@book.CoverUrl != null)
                                                            {
                                                                <img src=@ExBook.Extensions.BookCoverExtensions.GetLargeCoverUrl(@book.CoverUrl) alt="Cover" id="test" />
                                                            }
                                                            else
                                                            {
                                                                <img src="https://icons.iconarchive.com/icons/papirus-team/papirus-status/256/image-missing-icon.png" alt="Cover">
                                                            }
                                                            <div class="book-text">
                                                                <h3> @book.Author</h3>
                                                                <h5>@book.Name</h5>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                            <hr class="my-4" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
</body>


