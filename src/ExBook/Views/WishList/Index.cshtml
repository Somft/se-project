<style>

.container {
  padding: 1rem 0rem;
  position: relative;
}

h4 {
  margin: 1rem 0rem 1rem;
}

  td, th {
    vertical-align: middle;
  }
    .center {
      /*  margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);*/
         display: inline-block;
          vertical-align: bottom;
    }
    .header {
      padding: 60px;
      text-align: center;
      background: white;
      color: black;
      font-size: 30px;
    }
    .vertical-center {
   position: relative;
   bottom: 20px;
   right: 20px;
     }
    
    
    
    

</style>
<div class="header">
    <h1>Your wishlist</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead class="thead-dark">
                <tr>
                    @{
                        foreach (var head in TableHeaders)
                        {
                            <th>
                                @head
                            </th>
                        }
                    }
                </tr>
                </thead>

                <tbody>
                @{
                    if (Model != null)
                    {
                        foreach (var book in Model.Books)
                        {
                            <tr>
                                <td> @book.Book.Name</td>
                                <td> @book.Book.Author</td>
                                <td> @book.Book.Created</td>
                                <form asp-controller="AddToWishList" asp-route-id="@book.Book.Id" asp-action="RemoveBookFromWishList" method="post">
                                    <td><button type="submit" class="btn btn-danger"><i class="far fa-trash-alt"></i></button></td>
                                </form>
                            </tr>



                        }
                    }
                }
                </tbody>
            </table>
        </div>
        
    </div>
<div >
            <form asp-area="" asp-controller="WishList" asp-action="Add">
                <button type="submit" class="vertical-center" >Add</button>
            </form>
</div>
</div>

     






