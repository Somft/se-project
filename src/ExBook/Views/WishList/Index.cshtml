@model ExBook.Models.WhishList.WishListViewModel
@{
    ViewData["Title"] = "Your Wish List";
    string[] TableHeaders = new string[] {
                        "Book Title"
                        ,"Author"
                        ,"Created"
                        ,"Actions"
                        };
}


